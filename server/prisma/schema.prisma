generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* 
  USERS
*/
model User {
  user_id Int @id @default(autoincrement())
  password_hash String
  email String @db.VarChar(127) @unique
  username String @db.VarChar(31) @unique
}

model UserPermission {
  user_id Int @id
  permission_level Int @default(0)
}

model UserComments {
  user_id Int @id
  username String @db.VarChar(31) @unique
  comments_created Int[] @default([]) // array of Comment IDs
}

model UserPosts {
  user_id Int @id
  username String @db.VarChar(31) @unique
  posts_created Int[] @default([]) // array of Post IDs
}

/* 
  POSTS
*/

model Post {
  post_id Int @id @default(autoincrement())
  title String @db.Text
  content String @db.Text
  user_id Int
}

model PostLikes {
  post_id Int @id
  liked_by Int[] @default([]) // array of User IDs
}

model PostDislikes {
  post_id Int @id
  disliked_by Int[] @default([]) // array of User IDs
}

model PostComments {
  post_id Int @id
  comments Int[] @default([]) // array of Comment IDs
}

model Comment {
  comment_id Int @id @default(autoincrement())
  content String @db.Text
  post_id Int 
  user_id Int
}

model CommentLikes {
  comment_id Int @id
  liked_by Int[] @default([]) // array of User IDs
}

model CommentDislikes {
  comment_id Int @id
  disliked_by Int[] @default([]) // array of User IDs
}